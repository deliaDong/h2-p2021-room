div.roomApp
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh

  canvas
    width 100vw
    height 100vh
    position absolute
    top 0
    left 0

  .HUDContainer
    width 100vw
    height 100vh
    position absolute
    top 0
    left 0
    z-index 10
    display flex
    align-items center
    justify-content center
    user-select none
    pointer-events none
    opacity 0
    transition .5s ease .5s
    background rgba(0, 0, 0, .5)

    &.active
      opacity 1
      transition .5s ease

  .textOutput
    width 600px
    max-width 90vw
    height auto
    font-size font-big
    text-align center